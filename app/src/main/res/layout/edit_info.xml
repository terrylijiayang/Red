<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/back"
        android:layout_marginLeft="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="个人资料"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_marginLeft="120dp"/>

</LinearLayout>
    <TextView
        android:layout_width="410dp"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:textColor="#e6e6e6"
        android:id="@+id/textView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">
    <ImageView
        android:id="@+id/head_portrait"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/head_portrait"/>
    <TextView
        android:id="@+id/edit_photo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改头像"
        android:layout_toRightOf="@id/head_portrait"
        android:layout_marginLeft="60dp"
        android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="200dp"
            android:src="@drawable/details" />
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:id="@+id/tableLayout">
        <TableRow>
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="名字"
            android:textColor="#999999"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/nickname"
            android:layout_width="258dp"
            android:layout_height="40dp"
            android:text="水晶包"
            android:textColor="#333333"
            android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/details_name"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/details"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="小红书号"
                android:textColor="#999999"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="258dp"
                android:layout_height="40dp"
                android:text="29029029"
                android:textColor="#333333"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/details_id"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/details"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="官方认证"
                android:textColor="#999999" />
            <TextView
                android:layout_width="258dp"
                android:layout_height="40dp"
                android:text="点击申请官方认证"
                android:textColor="#333333" />

            <ImageView
                android:id="@+id/details_identif"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/details"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="性别"
                android:textColor="#999999" />
            <TextView
                android:id="@+id/gender"
                android:layout_width="258dp"
                android:layout_height="40dp"
                android:text="女"
                android:textColor="#333333" />

            <ImageView
                android:id="@+id/details_gender"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/details"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="常住地"
                android:textColor="#999999" />
            <TextView
                android:layout_width="258dp"
                android:layout_height="40dp"
                android:text="中国 重庆"
                android:textColor="#333333" />

            <ImageView
                android:id="@+id/details_location"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/details"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="生日"
                android:textColor="#999999" />
            <TextView
                android:layout_width="258dp"
                android:layout_height="40dp"
                android:text="1997-09-12"
                android:textColor="#333333" />

            <ImageView
                android:id="@+id/details_birth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/details"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="个性签名"
                android:textColor="#999999" />
            <TextView
                android:layout_width="258dp"
                android:layout_height="40dp"
                android:text="还没有简介哦"
                android:textColor="#333333" />

            <ImageView
                android:id="@+id/details_summary"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/details"/>
        </TableRow>

    </TableLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="更多信息（仅自己可见，用于优化你的推荐结果）"
        android:background="#e6e6e6"
        android:paddingLeft="20dp"
        android:layout_below="@+id/tableLayout"
        android:layout_alignEnd="@+id/textView"
        android:gravity="center_vertical"
        android:id="@+id/textView2" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:layout_below="@+id/textView2"
    android:layout_alignEnd="@+id/textView2"
    android:layout_marginLeft="20dp"
    android:id="@+id/linearLayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="肤质"
        android:textColor="#999999"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="补充信息"
        android:textColor="#999999"
        android:layout_marginLeft="70dp"
        android:layout_gravity="center_vertical"/>
    <ImageView
        android:id="@+id/details_skin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="200dp"
        android:src="@drawable/details" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="母婴"
            android:textColor="#999999"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="补充信息"
            android:textColor="#999999"
            android:layout_marginLeft="70dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/details_baby"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="200dp"
            android:src="@drawable/details" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#e6e6e6"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
