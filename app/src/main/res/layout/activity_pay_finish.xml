<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ljy.red.fragment.PayFinishActivity">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/back"
            android:contentDescription="" />

        <ImageView
            android:id="@+id/share"

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="320dp"
            android:background="@drawable/share" /><![CDATA[

        " />
    ]]>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/pink_bg"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="40dp"
        android:background="#F9AEC9">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="206dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/pink_bg" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="59dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="订单交易成功"
        android:textColor="#ff2742"
        android:textSize="22sp"
        android:layout_below="@+id/pink_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/check_order"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/bt_shape_red"
        android:text="查看订单"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_below="@+id/textView23"
        android:layout_alignRight="@+id/imageView11"
        android:layout_alignEnd="@+id/imageView11"
        android:layout_marginRight="81dp"
        android:layout_marginEnd="81dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/bt_shape_white"
        android:text="返回首页"
        android:textColor="#ff2742"
        android:layout_above="@+id/payway"
        android:layout_toRightOf="@+id/payway"
        android:layout_toEndOf="@+id/payway" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="下单时间：2018-9-21 23:34:12"
        android:textSize="16sp"
        android:layout_below="@+id/payway"
        android:layout_alignLeft="@+id/payway"
        android:layout_alignStart="@+id/payway" />

    <TextView
        android:id="@+id/payway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/check_order"
        android:layout_alignStart="@+id/check_order"
        android:layout_below="@+id/check_order"
        android:layout_marginTop="32dp"
        android:text="交易方式：微信支付 "
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="46dp"
        app:srcCompat="@drawable/check"
        android:layout_above="@+id/check_order"
        android:layout_centerHorizontal="true" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#F2F2F2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout6">

        <EditText
            android:id="@+id/editText"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/textView33"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView33"
            android:layout_marginTop="11dp"
            android:background="@drawable/edit_bg"
            android:text="   搜索商品"
            android:textColor="#666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="9dp"
            android:text="2005-2018 小红书版权所有，并保留所有权利"
            android:textColor="#666" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/search"
        android:layout_alignTop="@+id/relativeLayout6"
        android:layout_alignRight="@+id/button9"
        android:layout_alignEnd="@+id/button9" />
</RelativeLayout>
