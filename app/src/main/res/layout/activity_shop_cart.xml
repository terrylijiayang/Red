<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ljy.red.ShopCartActivity">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp">

        <ImageView
            android:id="@+id/back"

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/back"
            android:contentDescription="" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="320dp"
            android:background="@drawable/share" />
        " />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/blue_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:background="#F4F8FB"
        android:gravity="bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/white_bg"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="45dp"
        android:background="#ffffff">

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="120dp"
        android:layout_height="120dp"

        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        app:srcCompat="@drawable/goods_small"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/relativeLayout"
        android:layout_alignTop="@+id/white_bg"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginTop="9dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="32dp"
            android:layout_height="17dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/bt_shape_white"
            android:gravity="center"
            android:text="自营"
            android:textColor="#ff2742"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_toRightOf="@+id/小红书福利社"
            android:layout_toEndOf="@+id/小红书福利社" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/store" />

        <TextView
            android:id="@+id/小红书福利社"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView10"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/imageView5"
            android:layout_toRightOf="@+id/imageView5"
            android:text="小红书福利社"
            android:textColor="#333" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:id="@+id/detailed"
        android:layout_alignBottom="@+id/imageView4">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView13"
            android:layout_marginTop="14dp"
            android:text="湿泡沫洗面奶"
            android:textColor="#333"
            android:textSize="16sp" />



        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68dp"
            android:layout_marginStart="68dp"
            android:text="EltaMD氨基酸清洁保"
            android:textColor="#333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="税费¥14.45"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignStart="@+id/textView13" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="¥129  "
            android:textColor="#ff2742"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView17"
            android:layout_marginTop="10dp"
            android:text="207ml" />
        <!--  android:layout_alignLeft="@+id/detailed"
          android:layout_alignStart="@+id/detailed"-->

        <Button
            android:id="@+id/button5"
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/goods"
            android:layout_alignStart="@+id/goods"
            android:background="@drawable/bt_shape_red"
            android:text="限时特价"
            android:textColor="#ffffff"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/number_choice"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/white_bg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            app:srcCompat="@drawable/litter"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/free_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView21"
            android:layout_marginLeft="3dp"
            android:layout_toEndOf="@+id/textView21"
            android:layout_toRightOf="@+id/textView21"
            android:text="免运费"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/¥143.45"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/free_freight"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/free_freight"
            android:layout_marginTop="10dp"
            android:text="¥143.45"
            android:textColor="#ff2742"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="154dp"
            android:layout_marginStart="154dp"
            android:layout_marginTop="10dp"
            android:text="总计(含税):"
            android:textColor="#333"
            android:textSize="16sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#ff2742"
        android:text="结算"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="全选"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignLeft="@+id/number_choice"
        android:layout_alignStart="@+id/number_choice" />
</RelativeLayout>
